<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/styleSheet.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/css/stylesheetPost.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp"
        crossorigin="anonymous">
    <title>Document</title>
</head>

<body>
    <nav role="navigation" class="navbar-fix">
        <div class="nav-wrapper blue-grey lighten-5">
            <a href="http://localhost:8181/user/index" class="brand-logo center blue-grey-text darken-4">
                <div class="avatar">
                    <img src="/img/logInPic.jpg">
                </div>
            </a>
            <ul class="right">
                <li>
                    <a href="#">
                        <i class="material-icons blue-grey-text darken-4">search</i>
                    </a>
                </li>
                <li>
                    <a href="http://localhost:8181/user/dashboard">
                        <i class="material-icons blue-grey-text darken-4">dashboard</i>
                    </a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col s12 auther">
                <div class="col s12 m8 offset-m2 l6 offset-l7">
                    <div class="card-panel backgrond-auther lighten-5 z-depth-0 ">
                        <div class="row valign-wrapper">
                            <div class="col s2 ">
                                <a href="/profile/<%= art.author %>">
                                    <img src="<%= profilePic %>" alt="" class="circle responsive-img"> </a>
                                <!-- notice the "circle" class -->
                            </div>
                            <div class="col s10">
                                <span class="black-text">
                                    <h5>
                                        <%= art.author %>
                                    </h5>
                                    <%= bio %>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m12">
                <div class="card">
                    <div class="card-image">
                        <img class="responsive-img" src="/img/blog-img.jpg" height="300px">

                    </div>
                    <div class="card-content direction-matlab">
                        <a href="http://localhost:8181/post/<%= art._id %>/<%= art.author %>/<%= art.title %>">
                            <p class="card-title"> عنوان مقاله :
                                <b>
                                    <%= art.title %>
                                </b>
                            </p>
                        </a>
                        <p> خلاصه مقاله :
                            <%= art.abstract %>
                        </p>
                        <br>
                        <br>
                        <br>
                        <p> متن مقاله :
                            <%= art.content %>
                        </p>
                    </div>

                    <div class="card-action">
                        <a href="#">#tag</a>
                        <a href="#">#tag</a>
                        <a href="#">#tag</a>
                        <a href="#" class="right" onclick="like('<%= art._id %>')" >  پسندیدن </a>
                        <a href="#" class="right"> <i class="material-icons" style="color:red" onclick="like('<%= art._id %>')" id='like'>favorite_border</i> </a>
                    </div>

                </div>
            </div>
        </div>
        <% for ( var i = 0; i < cmtNum; i++) {%>
            <div class="row">
                <div class="col s12 auther1">
                    <div class="col s12 m12 ">
                        <div class="card-panel grey lighten-5 z-depth-4 hoverable" style=" border-radius: 8px;
                        border-bottom-left-radius: 0;">
                            <div class="row valign-wrapper">
                                <img src="<%= com[i].authorProfilePicUrl %>" class="col s2 m2 l2 circle responsive-img" alt="">
                                <div class="col s10 m10 l10 " >
                                    <span class="black-text">
                                        <h5> <%= com[i].author %> :</h5>
                                        <%= com[i].content %>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
                <div class="row col s12 m12 l12 xl12 " >
                    <div class="row col s12 m12 l12 xl12 " >
                        <div class="card col s12  white lighten-6 z-depth-1">

                            <form>

                                <div class="input-field " >
                                    <textarea id="commentField" class="materialize-textarea "></textarea>
                                    <label class= for="commentField">دیدگاه</label>
                                </div>
                                <a class="btn waves-effect waves-light blue lighten-1" id="sendComment" onclick="addCommentToDB('<%= art._id %>','<%= art.author %>','<%= art.title %>')"
                                    style="margin-right: 10px">ارسال</a>

                            </form>
                        </div>
                    </div>
                </div>
    </div>
    <script src="/js/jquery-3.3.1.js"></script>
    <script src="/js/comment.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
    <script src="/js/like.js"></script>
</body>

</html>